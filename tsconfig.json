{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "allowJs": true,
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}